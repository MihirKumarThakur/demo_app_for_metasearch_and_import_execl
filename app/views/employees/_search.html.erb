<%= semantic_form_for @employee, :url => search_employees_path, :html => {:class => "form-inline list-unstyled"} do |form| %>
      <div class="form-group">
      <label>Employee Name:</label>
      <%= form.inputs do %>
      <%= form.input :name, :as => :select,
      :collection => Employee.uniq.pluck(:name),
      :input_html => {:class => "small_dropdown form-control", :placeholder => "Name"} %>
      </div>
      <div class="form-group">
      <label>City:</label>
      <%= form.input :city, :as => :select,
      :collection => Employee.uniq.pluck(:city),
      :input_html => {:class => "small_dropdown form-control"} %>
      </div>
      <div class="form-group">
      <label>Age:</label>
      <%= form.input :age, :as => :select,
      :collection => Employee.uniq.pluck(:age),
      :input_html => {:class => "small_dropdown form-control"} %>
      </div>

      <div class="form-group">
      <label>  </label>
      <%= form.submit :submit, :as => :button, class: "btn btn-success form-control" %>
      </div>
<% end %>
<% end %>
